      .video-thumbnail-wrapper.uk-width-1-3
        a href=video.url
          img.video-thumbnail src=video.thumbnail
        p.video-time-ago = time_ago_in_words(video.posted_at) + 'Ââç'
      - if video.video_site == VideoSite::Nicovideo
        .video-site-nico
      - elsif video.video_site == VideoSite::Youtube
        .video-site-youtube
      h3.video-title.uk-width-2-3
        a href=video.url =video.title

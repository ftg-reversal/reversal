.row
  .col-md-3.col-sm-4
    a href=video.url target="_blank"
      img src=video.thumbnail title=video.title style="display: block; height: auto; width: 100%;"
    p.text-md-right
      strong = "#{time_ago_in_words(video.posted_at)}前"
  .col-md-9.col-sm-8
    a href=video.url target="_blank"
      h3 = video.title
      = render 'good', video: video
    - unless video.video_matchups.empty?
      .card.u-bg-gray.m-t-1
        .card-block
          p 対戦組み合わせ
          ul
            - video.video_matchups.each do |matchup|
              = render 'videos/matchup', matchup: matchup, video: video
hr
